/// Platform application configuration
/// Used by generate-k8s.rb to generate manifests from scala-play-app template

module platform

appName = "platform"
appPort = 9300
nodePort = 30100

// LoadBalancer configuration
loadBalancer {
  name = "platform-lb"
  certificateName = "idempotent-io-ssl-certificate"
  hostname = "idempotent.io"
}
